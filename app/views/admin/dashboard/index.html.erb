<div class="max-w-7xl mx-auto px-4 py-8 md:py-12">
  
 
  <div class="mb-10 border-b-2 border-primary pb-4">
    <h1 class="text-3xl md:text-5xl font-black text-primary uppercase tracking-tighter">
      ADMIN DASHBOARD <span class="text-white inline-block animate-pulse">⚡</span>
    </h1>
  </div>


  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
    

    <div class="bg-stone-900 p-8 rounded-2xl border border-stone-800 shadow-xl flex flex-col items-center justify-center group hover:border-primary transition-colors">
      <h3 class="text-stone-500 text-xs font-bold uppercase tracking-[0.2em] mb-4">Замовлень</h3>
      <p class="text-5xl font-black text-primary group-hover:scale-110 transition-transform">
        <%= @orders_count %>
      </p>
    </div>

    <div class="bg-stone-900 p-8 rounded-2xl border border-stone-800 shadow-xl flex flex-col items-center justify-center group hover:border-green-500 transition-colors">
      <h3 class="text-stone-500 text-xs font-bold uppercase tracking-[0.2em] mb-4">Виручка</h3>
      <p class="text-4xl font-black text-green-500 group-hover:scale-110 transition-transform font-mono">
        <%= number_to_currency(@total_revenue, unit: "₴", precision: 0) %>
      </p>
    </div>

    <div class="bg-stone-900 p-8 rounded-2xl border border-stone-800 shadow-xl flex flex-col items-center justify-center group hover:border-stone-400 transition-colors">
      <h3 class="text-stone-500 text-xs font-bold uppercase tracking-[0.2em] mb-4">Клієнтів</h3>
      <p class="text-5xl font-black text-white group-hover:scale-110 transition-transform">
        <%= User.client.count %>
      </p>
    </div>
  </div>


  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h2 class="text-2xl font-black uppercase border-l-4 border-primary pl-4">Останні замовлення</h2>
      <%= link_to "Всі замовлення →", admin_orders_path, class: "text-xs font-bold text-stone-500 hover:text-white transition-colors uppercase tracking-widest" %>
    </div>

    <div class="bg-stone-900 rounded-2xl border border-stone-800 overflow-hidden shadow-2xl">
      <table class="hidden md:table w-full text-left border-collapse">
        <thead class="bg-stone-800/50">
          <tr class="text-stone-500 text-[10px] font-black uppercase tracking-widest">
            <th class="p-5">ID</th>
            <th class="p-5">Клієнт</th>
            <th class="p-5">Сума</th>
            <th class="p-5">Статус</th>
            <th class="p-5 text-right">Дії</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-stone-800">
          <% @recent_orders.each do |order| %>
            <tr class="hover:bg-stone-800/20 transition-colors">
              <td class="p-5 font-mono text-xs text-stone-400">#<%= order.id.to_s.first(8).upcase %></td>
              <td class="p-5 font-bold text-white"><%= order.full_name %></td>
              <td class="p-5 font-bold text-primary"><%= number_to_currency(order.total_price, unit: "₴") %></td>
              <td class="p-5">
                <span class="px-2 py-1 rounded bg-stone-800 border border-stone-700 text-[9px] font-black uppercase tracking-tighter <%= order_status_color(order.status) %>">
                  <%= order.status %>
                </span>
              </td>
              <td class="p-5 text-right">
                <%= link_to "Деталі", admin_order_path(order), class: "text-[10px] font-black text-primary hover:underline uppercase" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="md:hidden divide-y divide-stone-800">
        <% @recent_orders.each do |order| %>
          <div class="p-5 space-y-3">
            <div class="flex justify-between items-start">
              <span class="text-stone-500 font-mono text-[10px]">#<%= order.id.to_s.first(8).upcase %></span>
              <span class="px-2 py-0.5 rounded bg-stone-800 text-[8px] font-black uppercase <%= order_status_color(order.status) %>">
                <%= order.status %>
              </span>
            </div>
            <div class="flex justify-between items-end">
              <div>
                <p class="text-white font-bold"><%= order.full_name %></p>
                <p class="text-primary font-black text-lg"><%= number_to_currency(order.total_price, unit: "₴") %></p>
              </div>
              <%= link_to "Деталі", admin_order_path(order), class: "bg-stone-800 px-4 py-2 rounded-lg text-[10px] font-black uppercase text-white" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>