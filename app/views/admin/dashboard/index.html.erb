<div class="content-wrapper">
  <h1 style="color: var(--primary); border-bottom: 2px solid var(--primary); padding-bottom: 10px;">ADMIN DASHBOARD ⚡</h1>

  <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin: 30px 0;">
    <div class="item-card" style="text-align: center;">
      <h3>ЗАМОВЛЕНЬ</h3>
      <p style="font-size: 2rem; color: var(--primary);"><%= @orders_count %></p>
    </div>
    <div class="item-card" style="text-align: center;">
      <h3>ВИРУЧКА</h3>
      <p style="font-size: 2rem; color: #4CAF50;"><%= number_to_currency(@total_revenue, unit: "₴") %></p>
    </div>
    <div class="item-card" style="text-align: center;">
      <h3>КЛІЄНТІВ</h3>
      <p style="font-size: 2rem;"><%= User.client.count %></p>
    </div>
  </div>

  <h2 style="margin-top: 40px;">Останні замовлення</h2>
  <table style="width: 100%; border-collapse: collapse;" class="item-card">
    <tr style="background: var(--dark-brown);">
      <th style="padding: 10px;">ID</th>
      <th>Клієнт</th>
      <th>Сума</th>
      <th>Статус</th>
      <th>Дії</th>
    </tr>
    <% @recent_orders.each do |order| %>
      <tr style="border-bottom: 1px solid var(--muted); text-align: center;">
        <td style="padding: 10px;"><%= order.id.to_s.first(8) %></td>
        <td><%= order.full_name %></td>
        <td><%= number_to_currency(order.total_price, unit: "₴") %></td>
        <td><span class="badge"><%= order.status %></span></td>
        <td><%= link_to "Деталі", admin_order_path(order), style: "color: var(--primary);" %></td>
      </tr>
    <% end %>
  </table>
</div>