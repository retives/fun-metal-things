<div class="container">
  <h1>Каталог інструментів FunMetalThings</h1>
  <div class="items-grid">
    <% @items.each do |item| %>
      <div class="item-card">
        <h3><%= item.name %></h3>
        <p><%= truncate(item.description, length: 80) %></p>
        <div class="price"><%= number_to_currency(item.price, unit: "₴", format: "%n %u") %></div>
        <%= link_to "Детальніше", item_path(item), class: "btn-primary", style: "text-align: center; margin-top: auto; text-decoration: none; padding-top: 10px;" %>
      </div>
    <% end %>
  </div>
</div>