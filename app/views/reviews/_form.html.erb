<%# app/views/reviews/_form.html.erb %>
<div class="bg-stone-900 p-6 rounded-xl border border-stone-700 mb-8">
  <h4 class="text-white text-lg font-semibold mb-4">Залишити свій відгук:</h4>
  
  <%= form_with(model: [ item, item.reviews.build ], local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :rating, "Ваша оцінка:", class: "block text-primary text-sm font-medium mb-2" %>
      <%= f.select :rating, (1..5).to_a.reverse.map { |n| ["#{n} ★", n] }, {}, 
          { class: "bg-stone-800 text-white border border-stone-600 rounded-lg px-4 py-2 w-32 focus:ring-2 focus:ring-primary outline-none" } %>
    </div>

    <div>
      <%= f.text_area :comment, 
          placeholder: "Напишіть ваші враження від інструменту...", 
          class: "w-full h-32 bg-stone-800 text-white border border-stone-600 rounded-lg p-4 focus:ring-2 focus:ring-primary outline-none resize-none" %>
    </div>

    <%= f.submit "ОПУБЛІКУВАТИ", 
        class: "px-8 py-3 bg-primary hover:bg-primary-dark text-white font-bold rounded-lg transition-all cursor-pointer" %>
  <% end %>
</div>